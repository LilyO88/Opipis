<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/mapFragment">

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.lidorttol.opipis.ui.opinionList.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_detailFragment_to_opinionFragment"
            app:destination="@id/opinionFragment" />
        <action
            android:id="@+id/action_detailFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <argument
            android:name="id_banio"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.lidorttol.opipis.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_opinionFragment"
            app:destination="@id/opinionFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.lidorttol.opipis.ui.map.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" >
        <action
            android:id="@+id/action_mapFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_mapFragment_to_addBathFragment"
            app:destination="@id/addBathFragment" />
        <action
            android:id="@+id/action_mapFragment_to_opinionFragment"
            app:destination="@id/opinionFragment" />
        <action
            android:id="@+id/action_mapFragment_to_noInternetFragment"
            app:destination="@id/noInternetFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.lidorttol.opipis.ui.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.lidorttol.opipis.ui.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_opinionFragment"
            app:destination="@id/opinionFragment" />
    </fragment>
    <fragment
        android:id="@+id/opinionFragment"
        android:name="com.lidorttol.opipis.ui.opinion.OpinionFragment"
        android:label="fragment_opinion"
        tools:layout="@layout/fragment_opinion" >
        <argument
            android:name="id_banio"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/addBathFragment"
        android:name="com.lidorttol.opipis.ui.AddBathFragment"
        android:label="fragment_add_bath"
        tools:layout="@layout/fragment_add_bath" />
    <fragment
        android:id="@+id/noInternetFragment"
        android:name="com.lidorttol.opipis.ui.NoInternetFragment"
        android:label="fragment_no_internet"
        tools:layout="@layout/fragment_no_internet" />
</navigation>