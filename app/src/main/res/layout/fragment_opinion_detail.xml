<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_opinionDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.opinionDetail.OpinionDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_container"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/data_lblNoUnisex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="No"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@+id/data_sepatatorUnisex"
            app:layout_constraintStart_toEndOf="@+id/data_sepatatorUnisex"
            app:layout_constraintTop_toTopOf="@+id/data_sepatatorUnisex"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/data_lblNoDisabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="No"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@+id/data_sepatatorDisabled"
            app:layout_constraintStart_toEndOf="@+id/data_sepatatorDisabled"
            app:layout_constraintTop_toTopOf="@+id/data_sepatatorDisabled"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/data_lblNoPaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="No"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@+id/data_sepatatorPaper"
            app:layout_constraintStart_toEndOf="@+id/data_sepatatorPaper"
            app:layout_constraintTop_toTopOf="@+id/data_sepatatorPaper"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/data_lblNoLatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="No"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@+id/data_sepatatorLatch"
            app:layout_constraintStart_toEndOf="@+id/data_sepatatorLatch"
            app:layout_constraintTop_toTopOf="@+id/data_sepatatorLatch"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/data_lblSiUnisex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Sí"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@+id/data_sepatatorUnisex"
            app:layout_constraintEnd_toStartOf="@+id/data_sepatatorUnisex"
            app:layout_constraintTop_toTopOf="@+id/data_sepatatorUnisex" />

        <TextView
            android:id="@+id/data_lblSiLatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Sí"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@+id/data_sepatatorLatch"
            app:layout_constraintEnd_toStartOf="@+id/data_sepatatorLatch"
            app:layout_constraintTop_toTopOf="@+id/data_sepatatorLatch" />

        <TextView
            android:id="@+id/data_lblSiPaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Sí"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@+id/data_sepatatorPaper"
            app:layout_constraintEnd_toStartOf="@+id/data_sepatatorPaper"
            app:layout_constraintTop_toTopOf="@+id/data_sepatatorPaper" />

        <TextView
            android:id="@+id/data_lblSiDisabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Sí"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@+id/data_sepatatorDisabled"
            app:layout_constraintEnd_toStartOf="@+id/data_sepatatorDisabled"
            app:layout_constraintTop_toTopOf="@+id/data_sepatatorDisabled" />

        <TextView
            android:id="@+id/data_sepatatorUnisex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/data_lblUnisex"
            app:layout_constraintEnd_toEndOf="@+id/data_ratSize"
            app:layout_constraintStart_toStartOf="@+id/data_ratSize"
            app:layout_constraintTop_toTopOf="@+id/data_lblUnisex" />

        <TextView
            android:id="@+id/data_sepatatorDisabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/data_lblDisabled"
            app:layout_constraintEnd_toEndOf="@+id/data_ratSize"
            app:layout_constraintStart_toStartOf="@+id/data_ratSize"
            app:layout_constraintTop_toTopOf="@+id/data_lblDisabled" />

        <TextView
            android:id="@+id/data_sepatatorPaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/data_lblPaper"
            app:layout_constraintEnd_toEndOf="@+id/data_ratSize"
            app:layout_constraintStart_toStartOf="@+id/data_ratSize"
            app:layout_constraintTop_toTopOf="@+id/data_lblPaper" />

        <RatingBar
            android:id="@+id/data_ratSize"
            style="@android:style/Widget.DeviceDefault.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/data_lblSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/data_lblSize" />

        <RatingBar
            android:id="@+id/data_ratCleaning"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/data_lblCleaning"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/data_lblCleaning" />

        <TextView
            android:id="@+id/data_lblUnisex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Unisex"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/data_lblDisabled" />

        <TextView
            android:id="@+id/data_lblSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Tamaño"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/data_lblCleaning" />

        <TextView
            android:id="@+id/data_lblDisabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Minusválidos"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/data_lblPaper" />

        <TextView
            android:id="@+id/data_lblPaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Papel"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/data_lblLatch" />

        <TextView
            android:id="@+id/data_lblCleaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="Limpieza"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/data_divisor" />

        <TextView
            android:id="@+id/data_lblNumOpinion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:text="nº de opiniones"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_lblDirection" />

        <RatingBar
            android:id="@+id/data_ratOpinion"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:max="5"
            android:numStars="5"
            app:layout_constraintBottom_toBottomOf="@+id/data_lblNumOpinion"
            app:layout_constraintEnd_toStartOf="@+id/data_lblNumOpinion"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/data_lblNumOpinion" />

        <TextView
            android:id="@+id/list_lblDirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/direccion"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/data_divisor"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/data_lblNumOpinion" />

        <TextView
            android:id="@+id/data_lblLatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Pestillo"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/data_lblSize" />

        <TextView
            android:id="@+id/data_sepatatorLatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/data_lblLatch"
            app:layout_constraintEnd_toEndOf="@+id/data_ratSize"
            app:layout_constraintStart_toStartOf="@+id/data_ratSize"
            app:layout_constraintTop_toTopOf="@+id/data_lblLatch" />


        <TextView
            android:id="@+id/add_lblAddOpinion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="@string/aniadir_opinion"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFD900FF    "
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/add_imgAddOpinion"
            app:layout_constraintStart_toEndOf="@+id/add_imgAddOpinion"
            app:layout_constraintTop_toTopOf="@+id/add_imgAddOpinion"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/add_imgAddOpinion"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/editar"
            android:tint="#D900FF"
            app:layout_constraintEnd_toStartOf="@+id/add_lblAddOpinion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/op_divisor" />

        <View
            android:id="@+id/op_divisor"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/data_lblUnisex" />

        <TextView
            android:id="@+id/op_goOpinions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Ver opiniones"
            android:textColor="#2196F3"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/add_lblAddOpinion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/add_lblAddOpinion" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>